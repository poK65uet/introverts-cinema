{
	"compilerOptions": {
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"declaration": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"outDir": "dist/",
		"rootDir": "src",
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"baseUrl": "./src"
	},
	"include": ["./src"],
	"exclude": ["dist", "node_modules"]
}
